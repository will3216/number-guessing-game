<h1>Listing games</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Guess</th>
    <th>Lower bound</th>
    <th>Upper bound</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.id %></td>
    <td><%= game.guess %></td>
    <td><%= game.lower_bound %></td>
    <td><%= game.upper_bound %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

